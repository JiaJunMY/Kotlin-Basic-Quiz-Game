<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rm120batch2_techi_14_framebg"
    tools:context=".Quiz_Page"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="10dp">

    <ImageView
        android:id="@+id/imgValueLives3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="672dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hearts" />

    <ImageView
        android:id="@+id/imgValueLives1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="672dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hearts" />

    <ImageView
        android:id="@+id/imgValueLives2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="672dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hearts" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="83dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="53dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="83dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="10dp"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtQuestionHeader"
        android:layout_width="310dp"
        android:layout_height="41dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/question_header"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Question 1:"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtQuestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="310dp"
        android:layout_height="183dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/questionsection"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="Empty..."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQuestionHeader" />

    <TextView
        android:id="@+id/txtCountdown"
        android:layout_width="119dp"
        android:layout_height="140dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="12dp"
        android:text="10"
        android:textAlignment="center"
        android:textSize="96sp"
        app:layout_constraintBottom_toTopOf="@+id/txtQuestionHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="83dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="548dp"
        android:layout_marginEnd="10dp"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="83dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="548dp"
        android:layout_marginEnd="53dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>